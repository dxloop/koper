{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist"]
		},
        "lint": {
			"cache": true
		},
		"test": {
			"dependsOn": ["build"],
			"cache": true,
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
		},
		"dev": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		}
	}
}