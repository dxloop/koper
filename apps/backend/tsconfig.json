{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"rootDir": "src",
		"outDir": "dist",

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,

		"declaration": true,
		"composite": true,
		"sourceMap": true,
		"declarationMap": true
	},
	"exclude": ["./jest.config.ts", "./node_modules/**/*", "./dist/**/*"]
}
